<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.arkrith.ArkRinth</id>
  <name>ArkRinth</name>
  <summary>A Minecraft launcher based on Modrinth</summary>
  
  <description>
    <p>
      ArkRinth is a custom Minecraft launcher forked from Modrinth, providing an easy and efficient way to manage and play Minecraft with mods and modpacks.
    </p>
    <p>
      Features include:
    </p>
    <ul>
      <li>Easy mod and modpack management</li>
      <li>Support for multiple Minecraft versions</li>
      <li>Clean, user-friendly interface</li>
      <li>Fast and lightweight launcher</li>
      <li>Integration with Modrinth's mod ecosystem</li>
    </ul>
  </description>
  
  <categories>
    <category>Game</category>
  </categories>
  
  <keywords>
    <keyword>minecraft</keyword>
    <keyword>launcher</keyword>
    <keyword>modrinth</keyword>
    <keyword>mods</keyword>
    <keyword>modpacks</keyword>
    <keyword>gaming</keyword>
  </keywords>
  
  <url type="homepage">https://github.com/arc360alt/ArkRinthTesting</url>
